@import url('http://fonts.googleapis.com/css?family=Raleway|Lato:400,700|Leckerli+One');

$red1 = #e31b23
$red2 = #b32024
$blue = #0187c5
$grey = #e3e3e3
$black = #666
$white = #fff

$boxHeight = 500px
$menuHeight = 1.2em

text-stroke(w, c)
  text-shadow:
    -(w) -(w) 0 c,
     (w)  (w) 0 c,
    -(w)  (w) 0 c,
     (w) -(w) 0 c

html, body
  height 100%
body
  margin 0
  font-family 'Lato', sans-serif
a
  color $blue
  text-decoration none
  font-style italic
  &:hover
    text-decoration underline

.wrapper
  height 100%
  width 100%
  display table
  text-align center

#menu
  background linear-gradient($red1, $red2)
  z-index 3
  position fixed
  top 0
  width 100%
  display table
  text-align center
  form
    padding .5em
    > div
      display inline-block 
    input, select, button
      box-sizing border-box
      height 1.8em
    label
      font-weight bold
      margin 0 .5em
      color $white
      text-align left
      vertical-align baseline
    input
      width 65px
      padding .2em
      text-align center
      &[name="limit"]
        width 5ch
    select
      width 55px
    button
      margin-left .8em
      
#header
  h1
    margin-top $menuHeight
    font-family 'Leckerli One'
    font-size 4em
    color $red1
    margin-bottom 0
    padding-bottom 0
    /*
    background linear-gradient($red1, $red2)
    -webkit-background-clip text
    -webkit-text-fill-color transparent
    */
  p
    font-family 'Raleway', sans-serif
    font-size 12pt
    color $black
    
#content
  #label
    height 1em
    margin-bottom .8em
    background $white
    font-family 'Lato', sans-serif
    font-weight bold
  #loader
    margin-top -10px
    height 30px
    svg
      //height 4px
      rect
        fill $blue
  #graph
    background $grey
    box-shadow: inset 0px 0px 2em $black;
    height $boxHeight
    svg
      background $white
      shape-rendering optimizeSpeed
      .stream
        stroke $white
        stroke-width 1px
      .blur
        opacity 0.2
      .axis path, .axis line
        stroke $blue
        stroke-width 6px
      .line
        fill none
        stroke $blue
        stroke-width 2px
      .tick text
        font-size 16px
        font-weight 700
      .tick line
        opacity .2

#footer
  display table-row
  color $black
  